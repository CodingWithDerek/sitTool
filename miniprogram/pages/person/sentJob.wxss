/* pages/person/sentJob.wxss */
.all{
  background-color: #f2f2f2;
  font-size: 30rpx;
}
.sentTip{
  height: 150rpx;
  margin: 20rpx;
  padding: 20rpx;
  background-color: white;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
}
.sentTip-icon{
  font-size: 50rpx;
  color: #3bac6a;
  margin-right: 20rpx;
}
.sentJobArea{
  background-color: white;
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin: 20rpx;
  border-radius: 20rpx;
}
.jobContainer{
  margin: 20rpx;
  padding: 20rpx;
  background-color: white;
  border-radius: 20rpx;
}
.jobContainer-up{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.jobContainer-up-right-delete,
.jobContainer-up-right-edit,
.jobContainer-up-right-open,
.jobContainer-up-right-close{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.jobContainer-up-right-delete,
.jobContainer-up-right-edit{
  margin-bottom: 30rpx;
}
.right-icon{
  font-size: 50rpx;
}
.right-text{
  font-size: 20rpx;
}
.jobContainer-buttom-interviewPeople{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.jobContainer-buttom-interviewPeople-right-each{
  margin: 20rpx 0;
  padding: 20rpx;
  border: 1px solid #33b5e5;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
}
.jobContainer-buttom-interviewPeople-right-each-right{
  color: #ff1d11;
  padding: 5rpx 10rpx;
  margin-left: 50rpx;
  border: 1px solid #ff1d11;
  border-radius: 10rpx;
}
.awaitJudge{
  color: #33b5e5;
}
.passed{
  color: #05c160;
}
.rejected{
  color: red;
}
.detailTitle{
  font-size: 35rpx;
  font-weight: bold;
}