/* pages/person/manageMessage.wxss */
.all{
  background-color: #f2f2f2;
  font-size: 30rpx;
}
.tipInfo{
  background-color: white;
  margin: 20rpx;
  padding: 20rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  height: 400rpx;
}
.finishedInfo{
  height: 80rpx;
  background-color: white;
  margin: 20rpx;
  padding: 20rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.tipInfo-icon,.finishedInfo-icon{
  font-size: 50rpx;
  color: #3bac6a;
  margin-right: 20rpx;
}
.buttonArea{
  height: 150rpx;
  background-color: white;
  display: flex;
  justify-content: center;
  align-items: center;
}
.buttonArea-button{
  font-size: 30rpx;
  padding: 5rpx 50rpx;
}