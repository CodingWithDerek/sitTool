/* pages/index/advertisement.wxss */
.all{
  background-color: #f2f2f2;
  font-size: 30rpx;
}
.simpleInfo{
  margin: 20rpx;
  border: 1px solid white;
  border-radius: 20rpx;
  background-color: white;
}
.simpleInfo-row{
  margin: 20rpx;
}
.simpleInfo-row-left{
  margin-right: 20rpx;
  color: grey;
}
.simpleInfo-row-call{
  margin-left: 20rpx;
  color: #33b5e5;
}
.detailInfo{
  margin: 20rpx;
  background-color: white;
  padding: 20rpx;
  border-radius: 20rpx;
}
.detailInfo-title{
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.detailInfo-title-icon{
  font-size: 50rpx;
  color: #3bac6a;
  margin-right: 20rpx;
}
.detailInfo-title text{
  font-size: 35rpx;
  font-weight: bold;
}
.detailInfo-content{
  white-space: pre-line;
}